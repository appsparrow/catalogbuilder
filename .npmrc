# Configure npm to handle optional dependencies better
optional=false
# Ensure platform-specific binaries are properly handled
platform=linux
arch=x64
# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true
# Skip optional dependencies that cause build issues
ignore-optional=true
# Force specific Rollup version to avoid native module issues
rollup-version=4.9.5
# Disable native addons that cause issues
build-from-source=false
